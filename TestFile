            <h3>Video Title 1</h3>
          </div>
          <div className="video-card">
            <iframe width="100%" height="300" src="https://www.youtube.com/embed/dQw4w9WgXcQ" title="Video 2" frameBorder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowFullScreen></iframe>
            <h3>Video Title 2</h3>
          </div>
        </div>
      </section>

      {/* Article Section */}
      <section id="articles" className="section">

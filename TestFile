import React, { useState } from 'react';
import { LuHome, LuMail, LuBell, LuSettings, LuUser } from "react-icons/lu";

// This is the main App component that renders the animated Navbar
export default function App() {
  const [activeItem, setActiveItem] = useState('mail');

  return (
    <div className="flex justify-center items-center min-h-screen bg-[#2d3a3a] p-4">
      <Navbar activeItem={activeItem} setActiveItem={setActiveItem} />
    </div>
  );
}

// The Navbar component itself
const Navbar = ({ activeItem, setActiveItem }) => {
  const items = [
    { name: 'home', icon: LuHome },
    { name: 'mail', icon: LuMail },
    { name: 'bell', icon: LuBell },
    { name: 'settings', icon: LuSettings },
    { name: 'user', icon: LuUser },
  ];

  // Logic to calculate the position of the animated highlight bar
  const activeIndex = items.findIndex(item => item.name === activeItem);
  const transformX = activeIndex * (100 / items.length);

  return (
    <div className="relative flex items-center bg-[#2d3a3a] text-white px-2 py-4 rounded-full shadow-lg overflow-hidden border border-[#405050]">
      {/* The main container for the navigation items */}
      <div className="relative z-10 flex w-full">
        {items.map((item) => {
          const Icon = item.icon;
          const isActive = item.name === activeItem;
          return (
            <div
              key={item.name}
              className={`flex-1 flex justify-center items-center cursor-pointer transition-colors duration-300 relative`}
              onClick={() => setActiveItem(item.name)}
            >
              {/* Animated glow and outline for the active item */}
              <div
                className={`absolute inset-0 rounded-full transition-opacity duration-300 pointer-events-none ${isActive ? 'opacity-100' : 'opacity-0'}`}
                style={{
                  boxShadow: isActive ? '0 0 10px #e7e7a3, 0 0 20px #e7e7a3' : 'none',
                  outline: isActive ? '1px solid #e7e7a3' : 'none',
                }}
              ></div>
              <div className={`relative z-20 transition-all duration-300 ${isActive ? 'text-[#e7e7a3]' : 'text-gray-400'}`}>
                <Icon size={24} className={`relative z-20`} />
              </div>
            </div>
          );
        })}
      </div>
      
      {/* The animated bottom bar that slides under the active icon */}
      <div
        className="absolute bottom-2 h-1 rounded-full bg-[#e7e7a3] transition-all duration-300 z-10"
        style={{
          width: `${100 / items.length}%`,
          transform: `translateX(${transformX}%)`,
        }}
      ></div>

      {/* Tailwind CSS CDN and font import */}
      <script src="https://cdn.tailwindcss.com"></script>
      <link rel="stylesheet" href="https://rsms.me/inter/inter.css"></link>
      <style>
        {`
        body {
          font-family: 'Inter', sans-serif;
        }
        `}
      </style>
    </div>
  );
};
